{
    "manifest_version": 3,
    "name": "Elder Scroll",
    "description": "Annotate webpages, all in one go",
    "version": "1.0",
    "permissions": ["activeTab", "storage", "commands"],
    "action": {
      "default_popup": "popup.html"
    },
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["content.js"]
      }
    ],
    "background": {
      "service_worker": "background.js"
    },
    "commands": {
      "highlight-text": {
        "suggested_key": {
          "default": "Ctrl+I",
          "mac": "Command+I"
        },
        "description": "Highlight selected text"
      },
      "add-note": {
        "suggested_key": {
          "default": "Ctrl+B",
          "mac": "Command+B"
        },
        "description": "Add note to selected text"
      }
    },
    "icons": {
      "16": "images/img16.png",
      "32": "images/img32.png",
      "48": "images/img48.png",
      "128": "images/img128.png"
    }
  }
